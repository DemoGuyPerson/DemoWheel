<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/apps_recycler_header_padding"
    android:paddingBottom="@dimen/apps_recycler_header_padding">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_add_app"
        android:layout_width="@dimen/apps_recycler_header_item_width"
        android:layout_height="@dimen/apps_recycler_header_item_height"
        android:focusable="true"
        android:layout_marginStart="@dimen/apps_recycler_header_magin_start"
        android:background="@drawable/selector_orange_frame">
        <TextView
            android:id="@+id/tv_bg_app"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/home_item_item_image_padding"
            android:background="@android:color/white" />
        <ImageView
            android:id="@+id/img_add_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_getmore_apps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_app_content"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="@dimen/apps_recycler_header_magin_end"/>
        <com.nes.customgooglelauncher.ui.widget.CustomTextView
            android:id="@+id/tv_app_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apps_get_more_app"
            app:layout_constraintStart_toEndOf="@id/img_add_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerVertical="true"
            android:textColor="@color/color_202020"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_add_game"
        android:layout_width="@dimen/apps_recycler_header_item_width"
        android:layout_height="@dimen/apps_recycler_header_item_height"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/apps_recycler_header_magin_start"
        android:background="@drawable/selector_orange_frame">
        <TextView
            android:id="@+id/tv_bg_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/home_item_item_image_padding"
            android:background="@android:color/white" />
        <ImageView
            android:id="@+id/img_add_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_getmore_games"
            android:layout_marginEnd="@dimen/apps_recycler_header_magin_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_game_content"
            app:layout_constraintHorizontal_chainStyle="packed"/>
        <com.nes.customgooglelauncher.ui.widget.CustomTextView
            android:id="@+id/tv_game_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apps_get_more_game"
            android:layout_centerVertical="true"
            android:textColor="@color/color_202020"
            app:layout_constraintStart_toEndOf="@id/img_add_game"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
