<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:configApp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@color/home_app_selector_txt_color"
        android:gravity="bottom"
        android:paddingBottom="@dimen/home_app_select_txt_padding"
        android:paddingStart="@dimen/home_app_select_txt_padding"
        android:text="@string/home_select_app_txt"
        configApp:layout_constraintTop_toTopOf="parent"
        configApp:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/home_select_txt_sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_channel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/home_app_selector_recycler_color"
        configApp:layout_constraintTop_toBottomOf="@id/text"
        configApp:layout_constraintEnd_toEndOf="parent"
        configApp:layout_constraintBottom_toBottomOf="parent"
        />
</merge>