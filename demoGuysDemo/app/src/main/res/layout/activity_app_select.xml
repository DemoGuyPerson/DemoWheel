<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@color/home_app_selector_txt_color"
        android:gravity="bottom"
        android:paddingBottom="@dimen/home_app_select_txt_padding"
        android:paddingStart="@dimen/home_app_select_txt_padding"
        android:text="@string/home_select_app_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/home_select_txt_sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_channel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/home_app_selector_recycler_color"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>