<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:configApp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nes.customgooglelauncher.ui.widget.CustomTextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_item_top_magin1"
        android:paddingStart="@dimen/home_app_select_txt_padding"
        android:text="@string/custom_channel_recycler_title"
        android:textColor="@color/custom_channel_recycler_title_color"
        android:textSize="@dimen/home_select_item_txt_sp"
        configApp:layout_constraintStart_toStartOf="parent"
        configApp:layout_constraintTop_toTopOf="parent"/>

    <com.nes.customgooglelauncher.ui.widget.CustomTextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_app_select_txt_padding"
        android:layout_marginTop="@dimen/custom_item_top_magin1"
        android:paddingLeft="@dimen/home_app_select_txt_padding"
        android:text="@string/custom_channel_recycler_details"
        android:textColor="@color/custom_channel_item_alia_color"
        android:textSize="@dimen/custom_channel_alia_txt_sp"
        configApp:layout_constraintBottom_toBottomOf="parent"
        configApp:layout_constraintStart_toStartOf="parent"
        configApp:layout_constraintTop_toBottomOf="@+id/tv_1" />
</androidx.constraintlayout.widget.ConstraintLayout>