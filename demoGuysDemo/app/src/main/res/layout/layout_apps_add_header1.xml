<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apps_recycler_header_height"
    android:background="@android:color/holo_green_dark">
    <RelativeLayout
        android:id="@+id/tv_add_app"
        android:layout_width="0dp"
        android:layout_height="@dimen/apps_recycler_header_item_height"
        app:layout_constraintDimensionRatio="9:2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_add_game"
        android:focusable="true"
        android:background="@drawable/selector_orange_frame">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_item_item_image_padding"
            android:background="@android:color/white" />
        <ImageView
            android:id="@+id/img_add_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_getmore_apps"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/apps_recycler_header_magin_end"/>
        <com.nes.customgooglelauncher.ui.widget.CustomTextView
            android:id="@+id/tv_app_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apps_get_more_app"
            android:layout_toEndOf="@id/img_add_app"
            android:layout_centerVertical="true"
            android:textColor="@color/color_202020"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tv_add_game"
        android:layout_width="0dp"
        android:layout_height="@dimen/apps_recycler_header_item_height"
        app:layout_constraintDimensionRatio="9:2"
        app:layout_constraintStart_toEndOf="@id/tv_add_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="true"
        android:background="@drawable/selector_orange_frame">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/home_item_item_image_padding"
            />
        <ImageView
            android:id="@+id/img_add_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_getmore_games"
            android:layout_marginEnd="@dimen/apps_recycler_header_magin_end"
            android:layout_centerVertical="true"/>
        <com.nes.customgooglelauncher.ui.widget.CustomTextView
            android:id="@+id/tv_game_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apps_get_more_game"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_add_game"
            android:textColor="@color/color_202020"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
